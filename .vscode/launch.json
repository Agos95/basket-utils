    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "--server.runOnSave",
                "true",
                "streamlit_app.py"
            ]
        },
        {
            "name": "Gradio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/gradio",
            "args": [
                "gradio_app.py"
            ],
            "console": "integratedTerminal"
        }
    ]
}